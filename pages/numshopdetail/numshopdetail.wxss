/* pages/numshopdetail/numshopdetail.wxss */

.getbuy {
  height: 330rpx;
  width: 100%;
  background: #fff;
  padding: 20rpx;
}

.getbuy_img {
  height: 100%;
  width: 35%;
  margin: 0 auto;
  position: relative;
}

.getbuy_itxta {
  position: absolute;
  top: 1rpx;
  width: 235rpx;
  height: 150rpx;
  font-size: 35rpx;
  font-weight: 600;
  color: #fff;
  line-height: 150rpx;
  text-align: center;
}

.getbuy_itxtb {
  position: absolute;
  bottom: 1rpx;
  width: 235rpx;
  height: 150rpx;
  font-size: 35rpx;
  font-weight: 600;
  color: #fff;
  line-height: 150rpx;
  text-align: center;
}

.getbuy_one {
  font-size: 28rpx;
  padding: 10rpx;
}

.getbuy_two {
  font-size: 36rpx;
  font-weight: 600;
  color: #000;
  padding: 8px;
}

.getbuy_three {
  font-size: 30rpx;
  font-weight: 600;
  color: #000;
  padding: 10rpx;
  line-height: 55rpx;
}

.getbuy_four {
  font-size: 24rpx;
  line-height: 40rpx;
  padding-left: 10rpx;
  margin-left: 1em;
}

.getbuy_btn {
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  position: absolute;
  bottom: 1rpx;
  color: #fff;
  text-align: center;
  font-weight: 600;
  font-size: 32rpx;
  background: linear-gradient(to right, #ff8c19, #ff5d1d);
  border-radius: 10rpx;
}
