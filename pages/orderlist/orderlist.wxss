/* pages/orderlist/orderlist.wxss */
.movie_list_box {
  padding: 15rpx 30rpx;
  position: relative;
  display: flex;
  align-items: center;
  background: #fff;
}

.movie_img_box {
  width: 140rpx;
  height: 185rpx;
}

.movie_img_box image {
  width: 100%;
  height: 100%;
  border-radius: 10rpx;
}

.movie_list_txtbox {
  -webkit-box-flex: 1;
  -webkit-flex: 1;
  flex: 1;
  min-width: 0;
  line-height: 50rpx;
  padding-left: 20rpx;
}

.movie_list_txtbox .item-title {
  font-size: 25rpx;
  color: #35353a;
  font-weight: 600;
}

.movie_list_txtbox .item-along {
  font-size: 20rpx;
  background: linear-gradient(to right, #ff8c19, #ff5d1d);
  -webkit-background-clip: text;
  background-clip: text;
  color: transparent;
}

.movie_list_txtbox .item-txt {
  font-size: 20rpx;
  color: gray;
  overflow: hidden;
  text-overflow: ellipsis;
  -o-text-overflow: ellipsis;
  white-space: nowrap;
}

.margin_icon {
  margin-right: 20rpx;
}

.movie-btnb {
  width: 150rpx;
  line-height: 50rpx;
  text-align: center;
  font-size: 20rpx;
  font-weight: 600;
  border-radius: 10rpx;
  color: #222;
  border: 1rpx solid #222;
}
.movie-btn {
  width: 150rpx;
  line-height: 50rpx;
  text-align: center;
  font-size: 20rpx;
  font-weight: 600;
  border-radius: 10rpx;
  background: linear-gradient(to right, #ff8c19, #ff5d1d);
  color: #fff;
  margin-top: 50rpx;
}

.footer_bom {
  color: #757781;
  display: flex;
}

.bom_a {
  width: 30%;
  display: inline-block;
}

.bom_b {
  display: inline-block;
  width: 30%;
  text-align: right;
}

.bom_c {
  display: inline-block;
  width: 70%;
  text-align: right;
}

.o_color {
  background: linear-gradient(to right, #ff8c19, #ff5d1d);
  -webkit-background-clip: text;
  background-clip: text;
  color: transparent;
}

/* 分割线 */

.yp_fen {
  background: #fff;
}

.yp_xi {
  display: block;
  width: 92%;
  height: 2rpx;
  background: #ebebeb;
  margin: 0 auto;
}

