.UCenter-bg {
  height: 300rpx;
  background-image: url(http://img.mockbird.top/1575358972238387.png);
  background-repeat: no-repeat;
  background-size: 100% 100%;
  -moz-background-size: 100% 100%;
  display: flex;
  padding: 50rpx;
  position: relative;
}

.qian_btn {
  display: flex;
  padding: 8rpx 18rpx 3rpx 13rpx;
  border-radius: 50rpx;
  border: 5rpx solid #fff;
  color: #fff;
  text-align: center;
  position: absolute;
  right: 35rpx;
  top: 60rpx;
  font-size: 35rpx;
}

.qian_btn image {
  width: 56rpx;
  height: 56rpx;
}

.yp_user-names {
  line-height: 50rpx;
  margin-left: 20rpx;
  font-weight: 500;
  color: #fff;
}

.ddcard {
  width: 30%;
  height: 136rpx;
  margin: 10rpx;
  padding: 1rpx;
  display: inline-block;
}

.dao_footer {
  display: flex;
  justify-content: space-between;
  margin-top: 15rpx;
}

.cal_culist {
  position: relative;
  margin: auto 15rpx;
  top: -90rpx;
}

.cal_box {
  margin-left: 15rpx;
  margin-right: 15rpx;
  padding: 20rpx;
  position: relative;
  top: -85rpx;
}

.grid_qdbox {
  width: 100%;
  white-space: nowrap;
  display: flex;
  padding: 10rpx;
}

.grid_itemwek {
  width: 80rpx;
  display: inline-block;
  margin: auto 10rpx;
}

.grid_week {
  font-size: 20rpx;
  text-align: center;
  color: #000;
  line-height: 30rpx;
}

.grid_qiu {
  width: 24rpx;
  height: 24rpx;
  margin: 20rpx auto;
  position: relative;
}

.grid_buqian {
  border: 1rpx solid #ff5d1d;
  border-radius: 20rpx;
  text-align: center;
  font-size: 25rpx;
  line-height: 40rpx;
  color: #ff5d1d;
  margin-top: 30rpx;
}

.cal_list {
  display: flex;
  padding: 5rpx;
  position: relative;
  margin: 15rpx 8rpx;
}

.cal_listimg {
  width: 80rpx;
  height: 80rpx;
}

.cal_listtxt {
  margin-left: 15rpx;
  line-height: 40rpx;
}

.cal_btn {
  width: 160rpx;
  line-height: 65rpx;
  background: linear-gradient(to right, #ff9019, #ff581e);
  text-align: center;
  height: 65rpx;
  border-radius: 40rpx;
  color: #fff;
  position: absolute;
  right: 10rpx;
  top: 12rpx;
  font-size: 30rpx;
}
.cal_btnd {
  width: 160rpx;
  line-height: 65rpx;
  background: #999999;
  text-align: center;
  height: 65rpx;
  border-radius: 40rpx;
  color: #fff;
  position: absolute;
  right: 10rpx;
  top: 12rpx;
  font-size: 30rpx;
}

.qiandao_box {
  position: absolute;
  top: 45%;
  left: 50%;
  width: 500rpx;
  height: 630rpx;
  border-radius: 20rpx;
  transform: translate(-50%, -50%);
  padding: 10rpx;
}

.date-choose-swiper {
  flex-grow: 1;
  height: 160rpx;
  margin-top: 10rpx;
}

.swiper-item {
  display: flex;
  flex-direction: column;
}

.weekday, .dateday {
  display: flex;
  justify-content: space-between;
  align-items: center;
  text-align: center;
  flex-grow: 1;
  height: 100%;
}
