/* pages/moviedetail/moviedetail.wxss */

.video_ypback {
  position: absolute;
  left: 35rpx;
  z-index: 999;
  font-size: 45rpx;
}

.yp_movieto {
  position: relative;
  border-top-left-radius: 22px;
  background: #fff;
  border-top-right-radius: 22px;
  top: -35rpx;
}

.yp_movie_box {
  display: flex;
  justify-content: center;
  padding: 30rpx 10rpx;
}

.yp_movie_dimage {
  width: 210rpx;
  height: 290rpx;
}

.yp_movie_dtext {
  width: 450rpx;
  margin-left: 20rpx;
}

.yp_title {
  font-weight: 600;
  font-size: 36rpx;
  width: auto;
  line-height: 45rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  word-wrap: break-word;
  word-break: break-all;
  margin-bottom: 5rpx;
  color: #343439;
}

.yp_desc {
  font-size: 24rpx;
  line-height: 35rpx;
  width: auto;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  word-wrap: break-word;
  word-break: break-all;
  margin-top: 14rpx;
  color: #6f7281;
}

/* 影片list */

.contenta {
  height: 350rpx;
}

.contenta .innera {
  display: flex;
  flex-direction: row;
  height: 350rpx;
  width: 900rpx;
}

.contenta .innera .movie-item {
  display: flex;
  flex-direction: column;
  width: 160rpx;
  height: 224rpx;
  margin: 10rpx;
}

.contenta .innera .movie-item image {
  width: 100%;
  height: 100%;
}

.contenta .innera .opy {
  width: 180rpx;
  text-align: center;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

.contentb {
  height: 250rpx;
}

.contentb .innerb {
  display: flex;
  flex-direction: row;
  height: 250rpx;
  width: 900rpx;
}

.contentb .innerb .movie-item_b {
  display: flex;
  flex-direction: column;
  width: 280rpx;
  height: 186rpx;
  margin: 10rpx;
}

.contentb .innerb .movie-item_b image {
  width: 100%;
  height: 100%;
}

.yp_bom_mbtnbox{

  background: #fff;
  padding: 20rpx 10rpx;
  display: flex;
  justify-content: center;
  position: fixed;
  left: 0;
  bottom: 0;
  right: 0;

}
.yp_goshopbtn{
  width: 100%;
  font-size: 32rpx;
  line-height: 90rpx;
  font-weight: 600;
  text-align: center;
  background: linear-gradient(to right, #ff8c19, #ff5d1d);
  color: #fff;
  padding: 10rpx;
  border-radius: 10rpx;
}