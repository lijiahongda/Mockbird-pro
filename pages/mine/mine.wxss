/* 兑换 */

.mask_layer {
  width: 100%;
  height: 100%;
  position: fixed;
  z-index: 999;
  left: 0;
  top: 0;
  background: #000;
  opacity: 0.5;
  overflow: hidden;
}
 
.modal_box {
  width: 80%;
  overflow: hidden;
  position: fixed;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  z-index: 1001;
  background: #fafafa;
  /* margin: -150px 12% 0 12%; */
  border-radius: 3px;
}

