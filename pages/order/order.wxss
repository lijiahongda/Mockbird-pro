.active, ._left {
  color: #ff9019;
}

.you_quan_txt {
  width: 200rpx;
  display: inline-block;
}

.quan_txt {
  line-height: 50rpx;
}

.red_txt {
  color: red;
}

button::after {
  border: none;
}

button {
  position: relative;
  display: block;
  margin-left: auto;
  margin-right: auto;
  padding-left: 14px;
  padding-right: 14px;
  box-sizing: border-box;
  font-size: 25rpx;
  text-align: right;
  text-decoration: none;
  line-height: 2.55555556;
  border-radius: 0;
  -webkit-tap-highlight-color: transparent;
  overflow: hidden;
  color: #6f7281;
  background-color: #fafafa;
}
