@import "mockui/main.wxss";
@import "mockui/icon.wxss";

.scrollPage {
  height: 100vh;
}

.text-light {
  font-weight: 300;
}

/* 登录 */

.login_zhezhao {
  position: fixed;
  width: 100%;
  height: 100%;
  top: 0px;
  background: rgba(0, 0, 0, 0.4);
  overflow: hidden;
  z-index: 999;
}

.login_box {
  position: absolute;
  top: 50%;
  left: 50%;
  width: 80%;
  background: #fff;
  border-radius: 20rpx;
  transform: translate(-50%, -50%);
  padding: 10rpx;
}

.good_loginto {
  position: relative;
  display: block;
  margin-left: auto;
  margin-right: auto;
  padding-left: 14px;
  padding-right: 14px;
  box-sizing: border-box;
  font-size: 35rpx;
  text-align: center;
  text-decoration: none;
  width: 85%;
  line-height: 80rpx;
  border-radius: 40rpx;
  -webkit-tap-highlight-color: transparent;
  overflow: hidden;
  color: #fff;
  background: linear-gradient(to right, #ff8c19, #ff5d1d);
  margin: 0 auto;
}

.not_loginto {
  position: relative;
  display: block;
  margin-left: auto;
  margin-right: auto;
  padding-left: 14px;
  padding-right: 14px;
  box-sizing: border-box;
  font-size: 35rpx;
  text-align: center;
  text-decoration: none;
  width: 85%;
  line-height: 80rpx;
  border-radius: 40rpx;
  -webkit-tap-highlight-color: transparent;
  overflow: hidden;
  color: #ccc;
  background: #e6e6e6;
  margin: 30rpx auto;
}

.login_header {
  text-align: center;
  font-size: 40rpx;
  color: #000;
  line-height: 130rpx;
  font-weight: 600;
}

.login_footer {
  text-align: center;
  font-size: 30rpx;
  color: gray;
  line-height: 80rpx;
}

button::after {
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0;
  left: 0;
  border: none;
  -webkit-transform: scale(0);
  transform: scale(0.5);
  -webkit-transform-origin: 0 0;
  transform-origin: 0 0;
  box-sizing: border-box;
  border-radius: 0;
}

/* 暂无数据 */

.zanwu-img {
  width: 260rpx;
  height: 260rpx;
  margin: 100rpx auto;
}

.zanwu {
  font-size: 28rpx;
  color: #6f7281;
  text-align: center;
}

/* 没有更多数据了 */

.list-over {
  width: 100%;
  height: 55px;
  line-height: 100rpx;
  text-align: center;
  font-size: 20rpx;
}

/* 隐藏滚动条 */

::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}


/* 全局渐变色字体 */

.mockbird_txt_color {
  background: linear-gradient(to right, #ff9019, #ff581e);
  -webkit-background-clip: text;
  background-clip: text;
  color: transparent;
}

.arva_bgimg{
  width: 100%;
  height: 100%;
  border-radius: 50%;
}